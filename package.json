{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/04-apps/*"
  ],
  "scripts": {
    "start": "npm run start --workspace=@project/vanilla-app",
    "start:react": "npm run start --workspace=@project/react-app",
    "start:vue": "npm run start --workspace=@project/vue-app",
    "start:angular": "npm start --workspace=@project/angular-app",
    "storybook": "npm run storybook --workspace=@project/vanilla-app",
    "storybook:react": "npm run storybook --workspace=@project/react-app",
    "storybook:vue": "npm run storybook --workspace=@project/vue-app",
    "storybook:angular": "npm run storybook --workspace=@project/angular-app",
    "storybook:components": "npm run storybook --workspace=@project/components",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --no-cache",
    "format": "prettier --write packages/",
    "fix-boms": "node scripts/fix-all-boms.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/eslint-parser": "^7.28.0",
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^9.1.2",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">= 12.0.0",
    "npm": ">= 6.0.0"
  }
}
